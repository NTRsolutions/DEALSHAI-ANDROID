<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.ogma.dealshaiapp.activity.DetailsActivity">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:background="#ECECEC"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <RelativeLayout
                android:id="@+id/rl_banner"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                    android:id="@+id/banner_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:overScrollMode="never">

                </cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/banner_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    app:ci_height="5dp"
                    app:ci_width="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_banner"
                android:padding="@dimen/margin_5">

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/iv_share"
                    android:layout_above="@+id/tv_location"
                    android:maxLines="1"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_alignParentStart="true"
                    android:text="Merchant"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/iv_share"
                    android:drawableStart="@drawable/pink_mapicon"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text=" City"
                    android:textColor="#515151"
                    android:textSize="@dimen/text_medium" />

                <com.ogma.dealshaiapp.utility.OpenSansFontRegular
                    android:id="@+id/tv_outlets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_location"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/distance_icon_new"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text=" Our Outlets"
                    android:textColor="#515151"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginTop="5dp"
                    android:layout_toStartOf="@+id/iv_share"
                    android:background="@drawable/dealshai_logo"
                    android:gravity="center|end"
                    android:paddingEnd="15dp"
                    android:paddingStart="0dp"
                    android:text="3.2"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_rating"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/box_share" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_outlets"
                    android:layout_marginTop="5dp">

                    <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                        android:id="@+id/tv_btn_menu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="#0C114A"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Menu"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                        android:id="@+id/tv_btn_contact"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="#0C114A"
                        android:gravity="center"
                        android:text="Contact"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                        android:id="@+id/tv_more_info"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="#0C114A"
                        android:gravity="center"
                        android:text="More info"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingPrefix">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/arrow" />

        <com.ogma.dealshaiapp.utility.OpenSansFontBold
            android:id="@+id/title_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_like"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_back"
            android:gravity="center"
            android:padding="5dp"
            android:text="Merchant"
            android:textColor="#0b114e"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/like_thumb" />

        <com.ogma.dealshaiapp.utility.OpenSansFontBold
            android:id="@+id/tv_total_like"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignEnd="@+id/iv_like"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22dp"
            android:background="@drawable/shape_rounded_pink_shape"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_main"
        android:layout_above="@+id/ll_buy_now"
        android:layout_margin="@dimen/margin_5"
        android:background="#eae4e4"
        android:orientation="vertical"
        android:padding="@dimen/margin_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_5">

            <com.ogma.dealshaiapp.utility.OpenSansFontBold
                android:id="@+id/tv_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_medium" />

            <com.ogma.dealshaiapp.utility.OpenSansFontRegular
                android:id="@+id/tv_item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_valid_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valid For:"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_very_small" />

                    <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                        android:id="@+id/tv_valid_for"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTheme"
                        android:textSize="@dimen/text_small" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_valid_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valid On:"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_very_small" />

                    <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                        android:id="@+id/tv_valid_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTheme"
                        android:textSize="@dimen/text_small" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:gravity="end"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="@dimen/text_small" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_new_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:gravity="end"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/text_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/minus_icon" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:text="0"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/plus_icon" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_buy_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#1B2272"
        android:gravity="center_vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/shape_signup_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingEnd="5dp"
            android:paddingStart="5dp">

            <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_small" />

            <com.ogma.dealshaiapp.utility.OpenSansFontBold
                android:id="@+id/tv_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

        </LinearLayout>

        <com.ogma.dealshaiapp.utility.OpenSansFontExtraBold
            android:id="@+id/tv_btn_buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/left_arrow"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="BUY NOW  "
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_large"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/error_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b3b3b3"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="@dimen/margin_10"
            android:src="@drawable/ic_oops" />

        <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oops! Something went wrong."
            android:textSize="@dimen/text_extra_large" />
    </LinearLayout>


</RelativeLayout>
