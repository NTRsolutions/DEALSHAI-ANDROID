<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_10"
    app:cardCornerRadius="5dp"
    tools:context="com.ogma.dealshaiapp.fragment.FragmentMoreCategories">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_curved_rectangle_background3">

        <LinearLayout
            android:id="@+id/ll_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/index_banner"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:scaleType="centerCrop"
                android:src="@drawable/loading" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_5">

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Merchant"
                    android:textColor="@color/uber_black"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_merchant_name"
                    android:text="Title"
                    android:textAllCaps="true"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold" />

                <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                    android:id="@+id/openSansFontBold4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tv_title"
                    android:layout_below="@+id/tv_title"
                    android:gravity="center"
                    android:text="Quantity:"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_medium" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/openSansFontBold4"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_toEndOf="@+id/openSansFontBold4"
                    android:text="10"
                    android:textSize="@dimen/text_medium" />

                <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                    android:id="@+id/openSansFontBold5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/openSansFontBold4"
                    android:layout_below="@+id/openSansFontBold4"
                    android:gravity="center"
                    android:text="Price:"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_medium" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/openSansFontBold5"
                    android:layout_alignBottom="@+id/openSansFontBold5"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_toEndOf="@id/openSansFontBold5"
                    android:gravity="center"
                    android:text="1000"
                    android:textSize="@dimen/text_medium" />

                <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                    android:id="@+id/openSansFontSemibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/openSansFontBold5"
                    android:layout_below="@+id/tv_price"
                    android:text="Total Amount:"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/openSansFontSemibold"
                    android:layout_alignBottom="@+id/openSansFontSemibold"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/openSansFontSemibold"
                    android:text="â‚¹ 1500"
                    android:textColor="@color/uber_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>