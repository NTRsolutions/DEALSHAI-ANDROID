<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.ogma.dealshaiapp.activity.CheckOut">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:theme="@style/ToolbarColoredBackArrow"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            app:title="Checkout"
            app:titleTextColor="@android:color/white" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_btn_proceed"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/app_bar"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Total Price"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_medium" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="₹5000"
                    android:textColor="#313131"
                    android:textSize="@dimen/text_medium" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Discount Applied"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_medium" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_discount_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="₹0"
                    android:textColor="#026c07"
                    android:textSize="@dimen/text_medium" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="5dp"
                android:background="@color/black_overlay" />

            <RelativeLayout
                android:id="@+id/rl_payable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Total Payable"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_medium" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_payable_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="₹4500"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/text_medium" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="5dp"
            android:background="@color/black_overlay" />

        <RelativeLayout
            android:id="@+id/tv_promo_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:visibility="visible">

            <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Apply Promo Code"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/text_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:background="@drawable/shape_plain_rectangle_background"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_promo_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:background="@android:color/transparent"
                    android:inputType="textNoSuggestions"
                    android:padding="5dp" />

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_btn_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@color/colorTheme"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Apply"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_medium" />

            </LinearLayout>

        </RelativeLayout>

        <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
            android:id="@+id/tv_voucher_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="You get a voucher worth ₹100 after successful purchase."
            android:textColor="#026c07"
            android:textSize="@dimen/text_medium" />

        <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
            android:id="@+id/tv_vouchers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="@dimen/margin_10"
            android:text="Available Vouchers"
            android:textColor="@color/textBlack" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <com.ogma.dealshaiapp.utility.OpenSansFontBold
        android:id="@+id/tv_btn_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTheme"
        android:gravity="center"
        android:padding="10dp"
        android:text="Proceed to pay"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_large" />

</RelativeLayout>