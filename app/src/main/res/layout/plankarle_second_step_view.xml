<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginStart="@dimen/margin_5"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/abc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/index_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_max_height"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/index_banner"
                android:layout_alignStart="@+id/index_banner"
                android:layout_below="@+id/index_banner"
                android:background="@color/colorFadeWhite"
                android:orientation="vertical">

                <com.ogma.dealshaiapp.utility.OpenSansFontBold
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_5"
                    android:text="Merchant Title Merchant Title Merchant Title"
                    android:textColor="#020202"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold" />

                <com.ogma.dealshaiapp.utility.OpenSansFontRegular
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/pink_mapicon"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:paddingStart="@dimen/margin_5"
                    android:text="  Sub Location"
                    android:textColor="#020202"
                    android:textSize="16sp" />

                <View
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black_overlay" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_5">

                    <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                        android:id="@+id/tv_lowest_deal_tittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="Lowest Prise Deal Title"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/ll_valid_for"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/ll_valid_on">

                            <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Valid For :"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />

                            <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                                android:id="@+id/tv_valid_for"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="1 Person"
                                android:textAllCaps="true"
                                android:textColor="@color/colorTheme"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_valid_on"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="15dp">

                            <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Valid On:"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />

                            <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                                android:id="@+id/tv_valid_on"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Mon - Fri"
                                android:textAllCaps="true"
                                android:textColor="@color/colorTheme"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_5">

                        <com.ogma.dealshaiapp.utility.OpenSansFontBold
                            android:id="@+id/tv_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignTop="@+id/tv_quick_view"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/shape_ecclipse_background"
                            android:paddingEnd="6dp"
                            android:paddingStart="6dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="60% off"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold" />

                        <com.ogma.dealshaiapp.utility.OpenSansFontBold
                            android:id="@+id/tv_quick_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/shape_curved_pink_rectangle_background"
                            android:gravity="center"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="@dimen/margin_5"
                            android:paddingTop="@dimen/margin_5"
                            android:text="ADD"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_medium" />

                        <com.ogma.dealshaiapp.utility.OpenSansFontBold
                            android:id="@+id/tv_new_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_discount"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            android:text="$2000"
                            android:textColor="#db2b97"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold" />

                        <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                            android:id="@+id/tv_old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_discount"
                            android:layout_marginEnd="7dp"
                            android:layout_toStartOf="@+id/tv_new_price"
                            android:text="$5000"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <com.ogma.dealshaiapp.utility.OpenSansFontBold
                android:id="@+id/appCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:background="@drawable/tag_shape"
                android:gravity="start|center"
                android:paddingStart="10dp"
                android:text="#PLANKARLE"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.ogma.dealshaiapp.utility.OpenSansFontBold
                android:id="@+id/tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_curved_rectangle_background2"
                android:drawableStart="@drawable/short_like_icon"
                android:gravity="start|center"
                android:padding="5dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
