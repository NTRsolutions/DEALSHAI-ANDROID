<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7efe1"
    android:orientation="horizontal"
    tools:context="com.ogma.dealshaiapp.fragment.FragmentMoreCategories">

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_5"
        android:background="#8B8A8A" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/index_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/loading" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_weight="1.1"
        android:orientation="vertical">

        <com.ogma.dealshaiapp.utility.OpenSansFontBold
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="4dp"
            android:text="Food"
            android:textAllCaps="true"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/location_icon"
                android:gravity="start|center"
                android:maxLines="1"
                android:text="Address"
                android:textColor="#020202"
                android:textSize="@dimen/text_small" />

        </LinearLayout>

        <com.ogma.dealshaiapp.utility.OpenSansFontRegular
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_address"
            android:maxLines="2"
            android:text="40% of on Entry and Adventure"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description">

            <com.ogma.dealshaiapp.utility.OpenSansFontRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:  " />

            <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_5"
        android:background="#8B8A8A" />


</LinearLayout>
