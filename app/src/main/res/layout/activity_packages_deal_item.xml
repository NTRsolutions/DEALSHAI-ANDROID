<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.ogma.dealshaiapp.fragment.FragmentMoreCategories">

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_5" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="148dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_weight=".8"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/index_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/loading" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <com.ogma.dealshaiapp.utility.OpenSansFontBold
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Merchant Name"
            android:textAllCaps="true"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

        <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_title"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/location"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:text="Location"
            android:textColor="#020202"
            android:textSize="@dimen/text_small" />


        <com.ogma.dealshaiapp.utility.OpenSansFontRegular
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address"
            android:minLines="4"
            android:text="Demo"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description">

            <com.ogma.dealshaiapp.utility.OpenSansFontBold
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Quantity:  " />

            <com.ogma.dealshaiapp.utility.OpenSansFontSemibold
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_5" />


</LinearLayout>
